{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": ["ESNEXT", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "pretty": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2017",
      "outDir": "lib"
    },
    "types": ["node"],
    "include": ["src"],
    "exclude": ["node_modules", "test/types"]
  }